<div class="bg-white min-h-screen overflow-auto">
  <div class="flex flex-col justify-center items-center mt-8 mb-8 mx-4 md:mx-24 lg:mx-72">
    <h1 class="text-3xl md:text-3xl lg:text-4xl font-bold text-accent text-center">
      <% content_for(:title, 'マイページ') %>
    </h1>
  </div>

  <%# プロフィールセクション %>
  <div class="bg-gray-50 mx-5 p-10">
    <div class="flex flex-col justify-center items-center">
      <div class="bg-white w-[300px] p-5 rounded-lg shadow-sm">
        <%# プロフィール上部：アバターと名前とXアイコン %>
        <div class="flex space-x-5 items-center mb-6">
          <div class="text-center ">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, class: 'w-16 h-16 rounded-full object-cover border-2 border-primary shadow-sm' %>
            <% else %>
              <%= image_tag 'profile_sample.png', class: 'w-16 h-16 rounded-full object-cover border-2 border-primary shadow-sm' %>
            <% end %>
          </div>
            <div class="text-accent">
              <div class="flex items-center space-x-8 ml-5">
                <p class="text-3xl font-bold mb-2"><%= current_user.name %></p>
                <%= link_to "", current_user.x_link, class: "fa-brands fa-x-twitter text-gray-400 text-2xl" %>
              </div>
              <!-- フォロー/フォロワー -->
              <div id="follow-stats">
                <%= render 'follows/stats', user: current_user %>
              </div>
            </div>
          </div>
        <%# プロフィール文 %>
        <div class="bg-gray-50 rounded-lg text-sm mb-5 p-4 text-gray-700">
          <% if @user.bio.present? %>
            <p class="text-center text-gray-400"><%= @user.bio %></p>
          <% else %>
            <p class="text-center text-gray-400">プロフィールを入力してください</p>
          <% end %>
        </div>
        <%# プロフィール編集ボタン %>
        <div class="flex justify-center">
          <%= link_to edit_mypage_path, 
              class: "flex items-center space-x-2 px-4 py-2 bg-gray-50 hover:bg-gray-100 rounded-lg text-primary transition duration-200" do %>
            <span class="material-symbols-outlined text-sm">edit</span>
            <span class="text-sm">プロフィール編集</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# 投稿セクション - 上部にマージンを追加 %>
  <div class="bg-gray-50 mx-5 mt-8 p-10">
    <div class="bg-white p-6 rounded-lg shadow-sm">
      <%# タブナビゲーション %>
      <div class="border-b border-gray-200 mb-6">
        <nav class="flex space-x-8" aria-label="Tabs">
          <%= link_to "自分の投稿", mypage_path(tab: "my_posts"),
              class: "tab-link #{'active' if params[:tab] != 'liked_posts'} px-3 py-2 text-sm font-medium",
              data: { turbo_frame: "posts_content" } %>
          <%= link_to "いいねした投稿", mypage_path(tab: "liked_posts"),
              class: "tab-link #{'active' if params[:tab] == 'liked_posts'} px-3 py-2 text-sm font-medium",
              data: { turbo_frame: "posts_content" } %>
        </nav>
      </div>

      <%# 投稿内容表示エリア %>
      <%= turbo_frame_tag "posts_content" do %>
        <%= render "posts_content", 
            journals: @journals,
            liked_journals: @liked_journals %>
      <% end %>
    </div>
  </div>
</div>
