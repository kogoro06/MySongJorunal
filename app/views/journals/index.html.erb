<div class="min-h-screen bg-customblue text-black flex flex-col items-center pt-8 pb-8">
  <div class="bg-white p-6 rounded shadow-md w-full max-w-2xl">
    <!-- ページタイトルと絞り込み -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">
        <%= "#{current_user.name}'s Journal" %>
      </h1>
      <%= form_with url: journals_path, method: :get, local: true, class: "flex items-center space-x-2 text-white", id: "emotion-filter-form" do |f| %>
        <%= f.select :emotion,
            Journal.emotions.keys.map { |key| [key.humanize, key] },
            { include_blank: "すべて", selected: params[:emotion] },
            { 
              class: "px-4 py-2 border rounded-md bg-customred",
              onchange: "this.form.requestSubmit()"
            } 
        %>
      <% end %>
    </div>

    <!-- 一覧表示 -->
    <ul class="space-y-4">
      <% @journals.each_with_index do |journal, index| %>
        <li class="bg-gray-100 p-4 rounded shadow">
          <div class="flex items-stretch min-h-[100px]">
            <!-- 日記情報 -->
            <div class="flex-grow flex flex-col justify-between">
              <div class="text-lg font-bold">タイトル: <%= journal.title.presence || "未設定" %></div>
              <div>作成日: <%= journal.created_at.in_time_zone('Asia/Tokyo').strftime("%Y年%m月%d日 %H:%M") %></div>
              <div>感情: <%= journal.emotion.presence || "未設定" %></div>
              <div>アーティスト名: <%= journal.artist_name.presence || "未設定" %></div>
              <div>曲名: <%= journal.song_name.presence || "未設定" %></div>
            </div>

            <!-- ボタングループ -->
            <div class="flex flex-col justify-between mr-24 gap-3">
              <%= link_to '日記を見る', journal_path(journal), 
                  class: "w-32 px-6 py-2 bg-gray-500 text-white font-medium rounded shadow-md hover:bg-gray-600 text-center" %>
              <%= link_to "編集", edit_journal_path(journal), 
                  class: "w-32 px-6 py-2 bg-yellow-500 text-white font-medium rounded shadow-md hover:bg-yellow-600 text-center" %>
              <%= button_to "削除", journal_path(journal), 
                  method: :delete, 
                  data: { confirm: "本当に削除しますか？" }, 
                  form_class: "w-32",
                  class: "w-full px-6 py-2 bg-red-500 text-white font-medium rounded shadow-md hover:bg-red-600 text-center" %>
            </div>
            
            <!-- ジャケット写真 -->
            <% if journal.album_image.present? %>
              <div class="flex-shrink-0 -m-4 w-40">
                <%= image_tag journal.album_image, class: "w-full h-full object-cover" %>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>

    <!-- 日記作成ボタン -->
    <div class="flex justify-center mt-6">
      <%= link_to "新しい日記を作成", new_journal_path, class: "btn btn-primary w-full" %>
    </div>
  </div>
</div>
