
<!-- 📊 検索結果エリア -->
 <h2 class="text-xl font-bold my-6  text-white text-center flex items-center justify-center gap-2">
    <%= image_tag 'spotify.png', alt: 'Spotify Logo', class: 'inline h-6 w-6' %>
    検索結果
  </h2>

<% if @tracks.present? %>
  <div class="p-6 rounded-lg">
    <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @tracks.each do |track| %>
        <li class="p-4 border border-gray-600 rounded-md bg-gray-700 font-bold  flex-row grid grid-cols-3 md:flex-row md:items-center md:gap-6">
          <div class="flex-1 text-center font-bold ">
            <p><strong>🎵 曲名:</strong> <%= track[:song_name] %></p>
            <p><strong>🎤 アーティスト:</strong> <%= track[:artist_name] %></p>
          </div>
          <div class="flex justify-center">
            <% if track[:album_image].present? %>
              <img src="<%= track[:album_image] %>" alt="アルバム画像" class="mt-2 w-24 h-24 object-cover rounded-md items-center">
            <% end %>
          </div>
          <% if track[:preview_url].present? %>
            <div class="mt-4 md:mt-0 md:w-1/3">
              <audio controls class="w-full">
                <source src="<%= track[:preview_url] %>" type="audio/mpeg">
              </audio>
            </div>
          <% end %>
          <div class="mt-4 md:mt-0 text-center font-bold">
            <%= button_to "🎯 この曲を選択", select_tracks_path(selected_track: track.to_json), method: :post, remote: true, class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 text-center" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% else %>
  <p class="text-white text-center">🔍 検索結果が見つかりませんでした。</p>
<% end %>

  <div class="p-6">
    <%= render partial: 'spotify/search' %>
  </div>
